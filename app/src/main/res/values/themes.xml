<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.INVEN" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/theme_1</item>
        <item name="colorPrimaryVariant">@color/theme_2</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/theme_4</item>
        <item name="colorSecondaryVariant">@color/theme_5</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        
        <item name="android:fontFamily">@font/poppins</item>
        <item name="fontFamily">@font/poppins</item>
    </style>

    <style name="TextLight">
        <item name="android:fontFamily">@font/poppins_light</item>
        <item name="fontFamily">@font/poppins_light</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TextMedium">
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TextBold">
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="fontFamily">@font/poppins_bold</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TextExtraBold">
        <item name="android:fontFamily">@font/poppins_extrabold</item>
        <item name="fontFamily">@font/poppins_extrabold</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TextBlack">
        <item name="android:fontFamily">@font/poppins_black</item>
        <item name="fontFamily">@font/poppins_black</item>
        <item name="android:textStyle">normal</item>
    </style>

</resources>